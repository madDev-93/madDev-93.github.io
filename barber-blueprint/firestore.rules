rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Blueprint users - users can only read/write their own data
    match /blueprint_users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId
                    && !request.resource.data.diff(resource.data).affectedKeys()
                        .hasAny(['purchased', 'purchaseDate', 'linkedAt']);
    }

    // Blueprint purchases - read only for matching email, write only via admin/webhook
    match /blueprint_purchases/{email} {
      allow read: if request.auth != null &&
                    request.auth.token.email.lower() == email.lower();
      allow write: if false; // Only Cloud Functions can write
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
